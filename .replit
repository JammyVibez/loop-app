modules = ["nodejs-20", "web", "nodejs-24"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Run Development Server"

[[workflows.workflow]]
name = "npm install --legacy-peer-deps"
mode = "parallel"
author = 46521931

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow]]
name = "Install Dependencies"
author = 46521931
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install @supabase/supabase-js socket.io-client cloudinary multer sharp uuid @types/uuid @types/multer"

[[workflows.workflow]]
name = "Run Development Server"
author = 46521931
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install --legacy-peer-deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 3000
externalPort = 80
